<main class="text-center bg-light">
  <div class="container text-center bg-light p-5">
    <h2 class="text-success-emphasis">
      <span class="mx-2"><i class="fa-brands fa-pagelines fs-4 fa-flip-horizontal"></i></span>
      Editar Planta
      <span class="mx-2"><i class="fa-brands fa-pagelines fs-4"></i></span>
    </h2>
    <div class="py-5 text-success-emphasis">
      <form action="/plantas/{{planta.id}}?_method=PUT" method="POST" class="col-12 col-md-10     col-lg-8 col-xl-6 p-5 rounded-3 mx-auto bg-pink">
        <div class="mb-3">
          <label for="genero" class="form-label">Género</label>
          <input type="text" class="form-control d-inline-flex focus-ring focus-ring-danger py-1 px-2 text-decoration-none border rounded-2" name="genero" id="genero" value="{{ planta.genero }}" required>
        </div>
        <div class="mb-3">
          <label for="especie" class="form-label">Especie</label>
          <input type="text" class="form-control d-inline-flex focus-ring focus-ring-danger py-1 px-2 text-decoration-none border rounded-2" name="especie" id="especie" value="{{ planta.especie }}">
        </div>
        <div class="mb-3">
          <label for="nombre_comun" class="form-label">Nombre Común</label>
          <input type="text" class="form-control d-inline-flex focus-ring focus-ring-danger py-1 px-2 text-decoration-none border rounded-2" name="nombre_comun" id="nombre_comun" value="{{ planta.[nombre_comun] }}">
        </div>
        <div class="mb-3">
          <label for="precio" class="form-label">Precio</label>
          <input type="number" class="form-control d-inline-flex focus-ring focus-ring-danger py-1 px-2 text-decoration-none border rounded-2" step="0.01" name="precio" id="precio" value="{{ planta.precio }}" required>
        </div>
        <div class="mb-3">
          <label for="cantidad" class="form-label">Cantidad</label>
          <input type="number" class="form-control d-inline-flex focus-ring focus-ring-danger py-1 px-2 text-decoration-none border rounded-2" name="cantidad" id="cantidad" value="{{ planta.cantidad }}" required>
        </div>
        <div class="mb-3 mt-5">
          <input type="checkbox" class="form-check-input d-inline-flex focus-ring focus-ring-danger py-1 px-2 text-decoration-none border rounded-2 mx-2" name="disponible" id="disponible" {{#if planta.disponible}}checked{{/if}}>
          <label for="disponible" class="form-check-label">Disponible</label>
        </div>
        <button class="btn bg-success-subtle px-3 border-0 my-4 fw-bold button-hover">Editar</button>
      </form>
    </div>
    <a href="/plantas" class="btn btn-light bg-pink fs-5 fw-bold px-4 py-2">Volver</a>
  </div>
</main>